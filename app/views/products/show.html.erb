

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-between">
    <div class="col-auto me-auto"><h3><%=@product.name %></h3></div>
    <div class="col-auto "><h5><span class="badge bg-secondary">Article: <%=@product.article %></span></h5></div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm">
      <%= image_tag(@product.photo, class:"img-fluid") %>
    </div>
    <div class="col-sm">
      <div class="row justify-content-between mt-2 jumbotron ">
        <div class="col-auto align-self-center">
          <h1 class="display-5"><strong><%= number_to_currency(@product.price, unit:"UAH", separator: ",", format: "%n%u" ) %></strong></h1>
        </div>
        <div class="col-auto align-self-center">
          <%= link_to 'Add to cart',
                      add_to_cart_path(item: @product.id),
                      class: 'btn btn-info btn-lg',
                      role: "button", style: "color: white",
                      remote: true,
                      data: { "bs-target": "#exampleModal", "bs-toggle": "modal" }%>
          <button type="button" class="btn btn-success btn-lg">Buy now</button>
        </div>
      </div>
      <div class="row">
        <div class="col">Config: <%=@product.config %></div>
      </div>
      <br>
      <div class="row">
      <div class="col">Factory: <%=@product.factory %></div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row mx-3">
    <%= @product.about %>
  </div>

</div>