<%#= pagy_bootstrap_nav(@pagy).html_safe %>
<div class="row">
  <%= render 'categories/category'  %>
  <div class="col-9">
    <% @categories.each do |categ|  %>
      <% next if categ.products.count <= 0 %>
      <% count_loop = 0 %>
      <h4><%= categ.name %></h4>
      <div class="row">
        <%categ.products.each do |product| %>
            <% break if count_loop >= 5%>
            <% count_loop+=1 %>
            <%= render product,  category: categ %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
